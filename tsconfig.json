{
    "compilerOptions": {
        "isolatedModules": false,
        "module": "commonjs",
        "noImplicitReturns": true,
        "noUnusedLocals": true,
        "outDir": "lib",
        "rootDir": "src",
        "sourceMap": true,
        "strict": true,
        "esModuleInterop": true,
        "forceConsistentCasingInFileNames": true,
        "skipLibCheck": true,
        "resolveJsonModule": true,
        "target": "ES2020",
    },
    "compileOnSave": true,
    "include": [
        "src"
    ]
}